<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/splash_screen_logo2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Petal"
        tools:targetApi="31">
        <activity
            android:name=".ReturnActivity"
            android:label="Petal | Return Plant"
            android:exported="false" />
        <activity
            android:name=".PlantListActivity"
            android:exported="false"
            android:label="Petal | Delete Plant" />
        <activity
            android:name=".PlantAdapter"
            android:exported="false"
            android:label="Petal |  Plant Adapter" />
        <activity
            android:name=".PlantDetailsActivity"
            android:label= "Petal | Plant's Details"
            android:exported="false" />
        <activity
            android:name=".AddPlant"
            android:exported="false"
            android:label="Petal | Add a New Plant" />
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:label="Petal | Home" />
        <activity
            android:name=".splashScreen"
            android:exported="true"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="Petal | Register" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>